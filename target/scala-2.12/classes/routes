# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /play/getToken              controllers.UnmannedController.unmannnedApi
GET     /play/getTare               controllers.UnmannedController.getTare(bound ?= "0")
GET     /play/getGross              controllers.UnmannedController.getGross(bound ?= "0")
GET     /play/getTokenData          controllers.UnmannedController.getToken(bound ?= "0")

GET      /api/0.1/read/avery/getTare               controllers.UnmannedClientController.getTare(bound ?= "0")
GET      /api/0.1/read/avery/getGross              controllers.UnmannedClientController.getGross(bound ?= "0")
GET      /api/0.1/read/avery/getTokenData          controllers.UnmannedClientController.getToken(bound ?= "0")
POST     /api/0.1/write/avery/CreateToken          controllers.UnmannedClientController.CreateToken
POST     /api/0.1/write/avery/updateToken          controllers.UnmannedClientController.updateToken

POST    /play/CreateToken          controllers.UnmannedController.CreateToken(request: play.mvc.Http.Request)
POST    /play/updateToken          controllers.UnmannedController.updateToken(request: play.mvc.Http.Request)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
